set clipboard=unnamed
set ignorecase
set smartcase
set showmatch
set hlsearch

" Quit insert mode
inoremap jj <Esc>
inoremap jk <Esc>
inoremap kk <Esc>

" Quit visual mode
vnoremap v <Esc>

" Move to the start of line
" nnoremap <C-a> ^
" vnoremap <C-a> ^
nnoremap H ^
vnoremap H ^

" Move to the end of line
" nnoremap <C-e> $
" vnoremap <C-e> $
nnoremap L $
vnoremap L $


" navigation
map gn :xcmenucmd Go Forward<CR>
map gb :xcmenucmd Go Back<CR>
map gh :xccmd jumpToNextCounterpart<CR>
map gs viw:xccmd findSelectedTextInWorkspace<CR>
" 折叠
nnoremap gzz :xccmd fold<CR>
" 展开
nnoremap gza :xccmd unfold<CR>

nmap G Gzz
nmap n nzz
nmap N Nzz
nmap p pzz
nmap <C-d> <C-d>zz
nmap <C-u> <C-u>zz
nmap <C-o> <C-o>zz

" Tab键匹配符号
nnoremap <tab> %
